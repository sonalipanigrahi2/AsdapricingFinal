        <th style="border-color:olivedrab">Retailer</th>
        <th style="border-color:olivedrab">Batch ID</th>
        <th style="border-color:olivedrab">File Name</th>
        <th style="border-color:olivedrab">Valid Products</th>
    </tr>
    </thead>
    <tbody class="qctablebody">
        @foreach (NETVIDEMAPPINGPART1 NETVIDEMAPPINGPART1Data in Model.NETVIDEMAPPINGPART1QC)
        {
            <tr>
                <td style="text-align:center">@NETVIDEMAPPINGPART1Data.Retailer</td>
                <td style="text-align:center">@NETVIDEMAPPINGPART1Data.BatchID</td>
                <td style="text-align:center">@NETVIDEMAPPINGPART1Data.FileName</td>
                <td style="text-align:center">@NETVIDEMAPPINGPART1Data.ValidProducts</td>
            </tr>
        }

</table>
<table id="NETVIDEMAPPINGPART2Tab" class="table table-bordered" style="display:none;margin:auto;font-size:0.9em;width: 80%" ">
    <thead>
        <tr>
            <th style="border-color:olivedrab">Retailer</th>
            <th style="border-color:olivedrab">Batch ID</th>
            <th style="border-color:olivedrab">Valid Products</th>
        </tr>
    </thead>
    <tbody class="qctablebody">
        @foreach (NETVIDEMAPPINGPART2 NETVIDEMAPPINGPART2Data in Model.GETNETVIDEMAPPINGPART2QC)
        {
            <tr>
                <td style="text-align:center">@NETVIDEMAPPINGPART2Data.Retailer</td>
                <td style="text-align:center">@NETVIDEMAPPINGPART2Data.BatchID</td>
                <td style="text-align:center">@NETVIDEMAPPINGPART2Data.ValidProducts</td>
