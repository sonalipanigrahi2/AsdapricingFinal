
@model IEnumerable<AsdaPricingAdministrationTool.Models.Delivery_Status_History>



<h1 style="padding-top:1.1em;text-align:center;color:olivedrab">
    History
</h1>
<br>
<body style="background-color:white;height: 1000px;">
    <div>
        <table class="fixed_header table-bordered" style="margin:auto" >
            <thead>
                <tr style="width:100%;display:table-row">
                    <th   style="width:15%;border-color:olivedrab">
                        Delivery
                    </th>
                    <th  style="width:27%;border-color:olivedrab">
                        Step
                    </th>
                    <th  style="width:8%;border-color:olivedrab">
                        Status
                    </th>
                    <th  style="width:15%;border-color:olivedrab">
                        Date/Time
                    </th>
                    <th  style="width:35%;border-color:olivedrab">
                        Notes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td  style="width:15%;">
                            @Html.DisplayFor(modelItem => item.Delivery)
                        </td>
                        <td  style="width:27%">
                            @Html.DisplayFor(modelItem => item.TaskName)
                        </td>
                        <td  style="width:8%">
                            @Html.DisplayFor(modelItem => item.TaskStatus)
                        </td>
                        <td  style="width:15%">
                            @Html.DisplayFor(modelItem => item.DateTime)
                        </td>
                        <td  style="width:35%">
                            @Html.DisplayFor(modelItem => item.TaskNotes)
                        </td>
                    </tr>
                }
</table>
    </div>
</body>




