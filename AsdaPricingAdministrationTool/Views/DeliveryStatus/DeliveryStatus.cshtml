
@model IEnumerable<AsdaPricingAdministrationTool.Models.Delivery_Status>



<h1 style="padding-top:1em;text-align:center;color:olivedrab">
    @*<input type="submit" value="Main Menu" class="btn btn-default Menu" onclick="location.href='@Url.Action("Index", "Home")'" /><span class=intro><u>Delivery Status</u></span>*@
    Delivery status
</h1>
<h3 style="text-align:center;color:olivedrab">

    @ViewBag.Data

</h3>
<body style="background-color:white;">
        <table class="fixed_header table-bordered"  style="margin:auto;">
            <thead>
                <tr style="width:100%;display:table-row">
                    <th style="width: 25%; border-color:olivedrab">
                        Step
                    </th>
                    <th style="width: 25%;border-color:olivedrab">
                        Status
                    </th>
                    <th style="width: 25%;border-color:olivedrab">
                        Date/Time
                    </th>
                    <th style="width: 25%;border-color:olivedrab">
                        Notes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.TaskStatus.ToUpper() == "COMPLETE" || item.TaskStatus.ToUpper() == "COMPLETED")
                    {
                        <tr>
                            <td style="width: 25%" >
                                @Html.DisplayFor(modelItem => item.TaskName)
                            </td>
                            <td style="width: 25%;background:#CDDC39">
                                @Html.DisplayFor(modelItem => item.TaskStatus)
                            </td>
                            <td style="width: 25%;">
                                @Html.DisplayFor(modelItem => item.DateTime)
                            </td>
                            <td style="width: 25%">
                                @Html.DisplayFor(modelItem => item.TaskNotes)
                            </td>
                        </tr>
                    }
                    else
                    { 
                        <tr>
                            <td style="width: 25%;">
                                @Html.DisplayFor(modelItem => item.TaskName)
                            </td>
                            <td style="width: 25%;">
                                @Html.DisplayFor(modelItem => item.TaskStatus)
                            </td>
                            <td style="width: 25%;">
                                @Html.DisplayFor(modelItem => item.DateTime)
                            </td>
                            <td style="width: 25%">
                                @Html.DisplayFor(modelItem => item.TaskNotes)
                            </td>
                        </tr>
                    }

                }
</table>
</body>


